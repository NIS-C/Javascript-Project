<body>
    <div>
<center>
        <form name="myForm">
            <fieldset>
                <legend> SIGN UP </legend>
                Name: <input type="text" placeholder="Enter Name" id="fn"><br><br>
                Password: <input type="password" placeholder="Enter the Password" id="sn"><br><br>
                Email: <input type="text" placeholder="Enter the Email" id="tn"><br><br>
                DOB: <input type="date" placeholder="Enter the DOB" id="un"><br><br>
                <input type="button" value="Submit" onclick="validate();">
            </fieldset>
        </form>
    </div>
    <script>
        function validate() {
            var a = document.getElementById('fn').value;
            if (a === "") {
                alert("Please Enter Your Username");
            }

            var b = document.getElementById('sn').value;
            if (b === "") {
                alert("Please Enter Your Password");
            }

            var emailID = document.getElementById('tn').value;
            var atpos = emailID.indexOf("@");
            var dotpos = emailID.lastIndexOf(".");

            if (atpos < 1 || dotpos < atpos + 2 || dotpos + 2 >= emailID.length) {
                alert("Please enter a valid email address");
                document.getElementById('tn').focus();
                return false;
            }
        }
    </script>
</body>
</center>
